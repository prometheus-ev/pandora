<% unless rights_reproduction["name"].blank? %>
  <%= rights_reproduction["name"] %>
<% end %>
<% unless rights_reproduction["wikidata"].blank? %>
  <%= "|" unless rights_reproduction["name"].blank? %>
  <%= link_to rights_reproduction["wikidata"], { controller: "searches", action: "advanced", "search_field[0]": "all", "search_value[0]": rights_reproduction["wikidata"] } %>
  (<%= link_to "Wikidata", "https://www.wikidata.org/wiki/#{rights_reproduction['wikidata']}", target: "_blank" %>
  <%= image_tag("/images/icon/arrow-up-right-from-square-solid.png", style: "vertical-align: baseline;") %>)
<% end %>
<% if !rights_reproduction["license"].blank? ||
    !rights_reproduction["license_url"].blank? %>
  <% if !rights_reproduction["name"].blank? ||
      !rights_reproduction["wikidata"].blank? %>
    <%= "|" %>
  <% end %>
  <% if rights_reproduction["license_url"].blank? &&
      !rights_reproduction["license"].blank? %>
    <%= rights_reproduction["license"] %>
  <% elsif !rights_reproduction["license_url"].blank? &&
      rights_reproduction["license"].blank? %>
    <%= rights_reproduction["license_url"] %>
  <% else %>
    <%= link_to(rights_reproduction["license"], rights_reproduction["license_url"], target: "_blank") %>
    <%= image_tag("/images/icon/arrow-up-right-from-square-solid.png", style: "vertical-align: baseline;") %>
  <% end %>
<% end %>
