<% if super_image.upload? %>
  <% super_image.keywords.each.with_index do |str, i| %><!--
 --><%= i == 0 ? '' : ', ' %><!--
 --><%= link_to str, uploads_path(field: 'keywords', value: str) %><!--
--><% end %>
<% else %>
  <% super_image.keywords.each.with_index do |str, i| %><!--
 --><%= i == 0 ? '' : ', ' %><!--
 --><%= link_to str, search_with_keyword_path(str) %><!--
--><% end %>
<% end %>
