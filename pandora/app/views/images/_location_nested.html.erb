<div>
  <%= location['name'] %>
  <%= link_to_google_maps(location['name']) %> 
  <% unless location['wikidata'].blank? %>
    | <%= link_to location['wikidata'], { controller: 'searches', action: 'advanced', 'search_field[0]': 'all', 'search_value[0]': location['wikidata'] } %>
    (<%= link_to 'Wikidata', "https://www.wikidata.org/wiki/#{location['wikidata']}", target: '_blank' %>
    <%= image_tag('/images/icon/arrow-up-right-from-square-solid.png', style: 'vertical-align: baseline;') %>)
  <% end %>
  <% if !location['link_text'].blank? && !location['link_url'].blank? %>
   | <%= link_to(location['link_text'], location['link_url'], target: '_blank') %>
  <%= image_tag('/images/icon/arrow-up-right-from-square-solid.png', style: 'vertical-align: baseline;') %>
<% end %>
</div>
