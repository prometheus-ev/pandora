<div class="content">
  <div class="title-line">
    <div>
      <small>
        <% if @box.boxable.is_a?(Collection) -%>
          <%= 'by %s' / link_to_profile(@box.boxable.owner, public: @box.boxable.public?) %>
        <% else -%>
          <%= 'by %s' / link_to_profile(@box.boxable.owner) %>
        <% end -%>
      </small>
      <%= access_status(@box.collection) %></div>
  </div>
</div>

<div class="list_controls">
  <%= pagination_for @images, page %>
</div>


<div class="content clear-float">
<% @images.each do |image| %>
  <div class="thumbnail">
    <div class="image">
      <%= link_to controller: 'images', action: 'show', id: image.pid do %>
        <%= image_tag_for(image, 'r60', { :title => image }, false) %>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<br class="clear-float" />
