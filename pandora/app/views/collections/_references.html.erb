<% if @collection.references.blank? -%>
  <%= 'none'.t %>
<% else -%>
  <table>
    <% @collection.references.each_with_index do |reference, index| -%>
      <tr>
        <td style="text-align: right; padding-right: 5px">(<%= index + 1 %>)</td>
        <td><%=h reference %></td>
      </tr>
    <% end -%>
  </table>
<% end -%>

