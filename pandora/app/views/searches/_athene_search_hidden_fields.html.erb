<% @search.field_selected.keys.each_index do |i| %>
  <%= hidden_field_tag("search_field[#{i}]", @search.field_selected["#{i}"]) %>
<% end %>

<% @search.value_text.keys.each_index do |i| %>
  <%= hidden_field_tag("search_value[#{i}]", @search.value_text["#{i}"]) %>
<% end %>

<% @search.boolean_fields_selected.keys.each_index do |i| %>
  <%= hidden_field_tag("boolean_fields_selected[#{i}]", @search.boolean_fields_selected["#{i}"]) %>
<% end %>

<%= hidden_field_tag("date[range]", @date_range) %>
<%= hidden_field_tag("date[query]", @date_query) %>

<%= hidden_field_tag("sample", @sample) %>
<%= hidden_field_tag("sample_size", @sample_size) %>

<%= hidden_field_tag("view", view) %>

<% @search.indices_checked.each do |key, value| %>
  <% if value -%>
    <%= hidden_field_tag("indices[#{key}]", value) %>
  <% end -%>
<% end -%>
