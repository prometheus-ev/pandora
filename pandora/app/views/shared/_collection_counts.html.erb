<% counts = super_image.collection_counts(current_user) %>
 
<% if counts['own'] > 0 %>
  <%= link_to(
    '%d own' / counts['own'],
    collections_path(field: 'image_pid', value: super_image.pid)
  ) %>
<% else %>
  <%= '%d own' / counts['own'] %>
<% end %>

